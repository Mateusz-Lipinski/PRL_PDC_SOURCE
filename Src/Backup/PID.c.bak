//Determines optimal setpoints of Phase shifters, detectors slopes, attenuators.
void Calib()
{
    SERIAL_WRITE(SERIAL_YELLOW);
    Calib352();
    Calib704();
    // POWER_Calib352();
    // POWER_Calib704();
    SERIAL_WRITE(SERIAL_COLOR_RESET);
